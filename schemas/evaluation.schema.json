{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ISA-Compatible Governance Evaluation Schema",
  "type": "object",
  "required": [
    "runId",
    "timestamp",
    "domain",
    "proposal",
    "status",
    "governanceScore"
  ],
  "properties": {
    "runId": {
      "type": "string",
      "description": "Unique evaluation identifier"
    },
    "timestamp": {
      "type": "string",
      "description": "ISO 8601 timestamp of evaluation",
      "format": "date-time"
    },
    "domain": {
      "type": "string",
      "enum": ["DEX", "LENDING", "PERP", "BRIDGE", "YIELD", "NFT", "DAO"]
    },
    "proposal": {
      "type": "object",
      "required": ["id", "title", "threshold"],
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "threshold": { "type": "number" }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "string",
      "enum": ["PASS", "REVIEW", "FAIL"],
      "description": "Final governance decision"
    },
    "governanceScore": {
      "type": "number",
      "description": "Weighted governance score (0.0â€“1.0)",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "currentModulatedMetrics": {
      "type": "object",
      "description": "Current modulated metric values used as baseline",
      "additionalProperties": { "type": "number" }
    },
    "impactAnalysis": {
      "type": "array",
      "description": "Per-metric forecast and quality assessment",
      "items": {
        "type": "object",
        "required": [
          "metric",
          "current",
          "declaredDirection",
          "declaredMagnitude",
          "forecasted",
          "quality",
          "flag"
        ],
        "properties": {
          "metric": { "type": "string" },
          "current": { "type": "number" },
          "declaredDirection": { "type": "string" },
          "declaredMagnitude": { "type": "number" },
          "forecasted": { "type": "number" },
          "quality": { "type": "string" },
          "flag": { "type": "string" }
        },
        "additionalProperties": false
      }
    },
    "criticalFlags": {
      "type": "array",
      "description": "Blocking risk indicators",
      "items": { "type": "string" }
    },
    "warnings": {
      "type": "array",
      "description": "Non-blocking risk indicators",
      "items": { "type": "string" }
    },
    "recommendation": {
      "type": "string",
      "description": "Evaluator recommendation (e.g., DEPLOY RECOMMENDED)"
    },
    "summary": {
      "type": "string",
      "description": "Human-readable summary of evaluation"
    },
    "suggestedNextSteps": {
      "type": "array",
      "description": "Suggested follow-up actions",
      "items": { "type": "string" }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata for versioning or extensions",
      "properties": {
        "version": {
          "type": "string",
          "default": "1.0"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
